{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "removeComments": false,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "rootDir": ".",
    "jsx": "preserve",
    "allowJs": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      // TS5090 leading './'
      "@/*": [
        "./src/*"
      ],
      "pages/*": [
        "./src/pages/*"
      ],
      "comp/*": [
        "./src/components/*"
      ],
      "image/*": [
        "./src/assets/images/*"
      ]
    }
  },
  "include": [
    "./src",
    "./types",
    "./config"
, "src/libs/bmap-wx.min.js"  ],
  "compileOnSave": false,
}
